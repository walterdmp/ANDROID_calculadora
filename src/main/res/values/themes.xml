<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Fundo da app -->
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Cor principal = botões especiais como "=" -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/orange_light</item>

        <!-- Cor secundária = botões como 'C' e 'D' -->
        <item name="colorSecondary">@color/gray_light</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/text_white</item>

        <!-- Cor da status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Estilo base dos botões -->
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <!-- Estilo base para todos os botões -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <!-- Botões especiais tipo 'C', 'D' -->
    <style name="AppTheme.Other.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <!-- Botões de operações (+, -, ÷, x, %) -->
    <style name="ButtonOperacaoTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Botão de igual "=" -->
    <style name="AppTheme.Equal.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>
