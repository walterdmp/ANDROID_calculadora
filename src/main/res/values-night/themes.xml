<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cor de fundo -->
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Cor dos botões especiais e operacionais -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/orange_light</item>

        <!-- Cor dos botões tipo C, D, etc -->
        <item name="colorSecondary">@color/gray_light</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/text_white</item>

        <!-- Cor da status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Se quiser um estilo de texto branco, pode ser assim -->
    <style name="Button.White" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
